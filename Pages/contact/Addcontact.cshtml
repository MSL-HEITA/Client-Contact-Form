@page
@model binay.Pages.contact.AddcontactModel
@{
}
<h1> ADD NEW CLient</h1>
@if (Model.emessage.Length > 0)
{
    <div class="alert" role="alert">
        <b>@Model.emessage</b>
        <button type="button" class="btn-close"></button>
    </div>
}
<form method="post">
    <h4>Please complete the form.</h4>
  <div class="row mb-4">
        <label class="col-sm-4">First Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="First_name" value="@Model.contactinfor.FirstName" required>
        </div>
        <label class="col-sm-4">SureName</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="SureName" value="@Model.contactinfor.SurName" required>
        </div>
        <label class="col-sm-4">E-mail</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="email" value="@Model.contactinfor.Email" pattern="[a-z0-9._%+-]+@@[a-z0-9.-]+\.[a-z]{2,4}$" required>
        </div>
        <label class="col-sm-4">Affiliate</label>
        <select class="form-select" name="Affiliate">
            <option value="">Select:</option>
            @foreach (var item in Model.listclient)
            {
                <option value="@item">@item</option>
            }
        </select>


    </div>
    @if (Model.sucmessage.Length > 0)
    {
        <div class="alert" role="alert">
            <b>@Model.sucmessage</b>
            <button type="button" class="btn-close"></button>
        </div>
    }
    <div class="row mb-4">
        <button type="submit" class="btn-block btn-primary">Submit</button>
        <div class="row mb-4">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>

    </div>


</form>